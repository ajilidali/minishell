{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "GDB Debug minishell",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/env",
            "args": ["-i", "${workspaceFolder}/minishell",],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Follow child process instead of parent process after fork",
                    "text": "set follow-fork-mode child",
                    "ignoreFailures": false
                  },
                  {
                    "description": "After fork, both parent and child processess remain being debugged.",
                    "text": "set detach-on-fork off",
                    "ignoreFailures": false
                  },
          
            ],
            "preLaunchTask": "build minishell",
            "miDebuggerPath": "/usr/bin/gdb",
            "logging": {
                "trace": true,
                "traceResponse": true,
                "engineLogging": true
            }
        }
    ]
}
